@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Add Phone Number";
}

<br />
<div class="ui container">

    <h2>@ViewData["Title"].</h2>
<form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="ui form" role="form">
    <h4>Add a phone number.</h4>
    <div class="ui divider"></div>
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="fields">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="ui button primary">Send verification code</button>
        </div>
    </div>
</form>

    </div>

@section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
